{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2016",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6",
      "es7",
      "esnext.asynciterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "types"
    ],
    "types": [
      "liff-type"
    ],
    "noEmit": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "public"
  ]
}
